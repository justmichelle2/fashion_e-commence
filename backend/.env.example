# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=development

# Database
DATABASE_URL=sqlite:database.sqlite

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Daily.co Video Calling
DAILY_API_KEY=your_daily_api_key_here
# Get your API key from: https://dashboard.daily.co/developers

# Agora Live Streaming
AGORA_APP_ID=your_agora_app_id_here
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here
# Get credentials from: https://console.agora.io/

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Get keys from: https://dashboard.stripe.com/apikeys

# Encryption for Sensitive Data
ENCRYPTION_KEY=your_32_character_encryption_key_here_change_this
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# File Upload Configuration
MAX_FILE_SIZE=10485760
# 10MB in bytes

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourapp.com

# Mobile Money API (Optional - for African markets)
MTN_API_KEY=your_mtn_api_key
VODAFONE_API_KEY=your_vodafone_api_key

# Redis (Optional - for Socket.io scaling)
REDIS_URL=redis://localhost:6379

# AWS S3 / CloudFlare R2 (Optional - for media storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Sentry Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window
